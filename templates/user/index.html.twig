{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>email</th>
            <th>role</th>
            <th>action</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{user.id}}</td>
                <td>{{user.email}}</td>
                <td>
                    {% if "ROLE_ADMIN" in user.getRoles() %}
                        ADMIN
                    {% else %}
                        USER
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">
                        edit
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new user</a>


{% endblock %}

